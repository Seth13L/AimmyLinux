<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        x:Class="Aimmy.UI.Avalonia.Windows.MainWindow"
        Width="900"
        Height="760"
        MinWidth="740"
        MinHeight="560"
        Title="Aimmy Linux Config Editor">
  <Grid RowDefinitions="Auto,*,Auto">
    <Border Padding="16" BorderBrush="#334f7f73" BorderThickness="0,0,0,1">
      <StackPanel Spacing="4">
        <TextBlock FontSize="22" FontWeight="SemiBold" Text="Aimmy Linux Configuration Editor" />
        <TextBlock x:Name="ConfigPathTextBlock" Foreground="#AAFFFFFF" />
      </StackPanel>
    </Border>

    <ScrollViewer Grid.Row="1" Margin="0,8,0,8">
      <StackPanel Margin="16" Spacing="16">
        <Border BorderBrush="#334f7f73" BorderThickness="1" CornerRadius="8" Padding="12">
          <StackPanel Spacing="12">
            <TextBlock FontSize="16" FontWeight="SemiBold" Text="Display Selection (X11)" />
            <CheckBox x:Name="UseDiscoveredDisplayCheckBox"
                      Content="Use discovered display geometry"
                      IsChecked="{Binding DisplaySelection.UseDiscoveredDisplay, Mode=TwoWay}"
                      Checked="OnDisplayModeChanged"
                      Unchecked="OnDisplayModeChanged" />

            <StackPanel Spacing="4">
              <TextBlock Text="Discovered displays" />
              <ComboBox x:Name="DiscoveredDisplayComboBox"
                        ItemsSource="{Binding DisplaySelection.DisplayOptions}"
                        SelectedValueBinding="{Binding Id}"
                        SelectedValue="{Binding DisplaySelection.SelectedDisplayId, Mode=TwoWay}">
                <ComboBox.ItemTemplate>
                  <DataTemplate>
                    <TextBlock Text="{Binding Label}" />
                  </DataTemplate>
                </ComboBox.ItemTemplate>
              </ComboBox>
            </StackPanel>

            <Grid x:Name="ManualDisplayGrid"
                  ColumnDefinitions="Auto,*"
                  RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto"
                  ColumnSpacing="12"
                  RowSpacing="8">
              <TextBlock Grid.Row="0" Text="Display Width" VerticalAlignment="Center" />
              <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding DisplaySelection.DisplayWidth, Mode=TwoWay}" />

              <TextBlock Grid.Row="1" Text="Display Height" VerticalAlignment="Center" />
              <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding DisplaySelection.DisplayHeight, Mode=TwoWay}" />

              <TextBlock Grid.Row="2" Text="Offset X" VerticalAlignment="Center" />
              <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding DisplaySelection.DisplayOffsetX, Mode=TwoWay}" />

              <TextBlock Grid.Row="3" Text="Offset Y" VerticalAlignment="Center" />
              <TextBox Grid.Row="3" Grid.Column="1" Text="{Binding DisplaySelection.DisplayOffsetY, Mode=TwoWay}" />

              <TextBlock Grid.Row="4" Text="DPI Scale X" VerticalAlignment="Center" />
              <TextBox Grid.Row="4" Grid.Column="1" Text="{Binding DisplaySelection.DpiScaleX, Mode=TwoWay}" />

              <TextBlock Grid.Row="5" Text="DPI Scale Y" VerticalAlignment="Center" />
              <TextBox Grid.Row="5" Grid.Column="1" Text="{Binding DisplaySelection.DpiScaleY, Mode=TwoWay}" />
            </Grid>
          </StackPanel>
        </Border>

        <Border BorderBrush="#334f7f73" BorderThickness="1" CornerRadius="8" Padding="12">
          <StackPanel Spacing="12">
            <TextBlock FontSize="16" FontWeight="SemiBold" Text="Data Collection / Auto Label" />
            <CheckBox Content="Collect data while playing"
                      IsChecked="{Binding DataCollection.CollectDataWhilePlaying, Mode=TwoWay}" />
            <CheckBox Content="Auto label captured data"
                      IsChecked="{Binding DataCollection.AutoLabelData, Mode=TwoWay}" />

            <Grid ColumnDefinitions="Auto,*" RowDefinitions="Auto,Auto" ColumnSpacing="12" RowSpacing="8">
              <TextBlock Grid.Row="0" Text="Images Directory" VerticalAlignment="Center" />
              <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding DataCollection.ImagesDirectory, Mode=TwoWay}" />

              <TextBlock Grid.Row="1" Text="Labels Directory" VerticalAlignment="Center" />
              <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding DataCollection.LabelsDirectory, Mode=TwoWay}" />
            </Grid>
          </StackPanel>
        </Border>
      </StackPanel>
    </ScrollViewer>

    <Border Grid.Row="2" Padding="12" BorderBrush="#334f7f73" BorderThickness="0,1,0,0">
      <Grid ColumnDefinitions="*,Auto,Auto,Auto" ColumnSpacing="8">
        <TextBlock x:Name="StatusTextBlock" VerticalAlignment="Center" TextWrapping="Wrap" />
        <Button Grid.Column="1" Width="96" Content="Apply" Click="OnApplyClicked" />
        <Button Grid.Column="2" Width="96" Content="Save" Click="OnSaveClicked" />
        <Button Grid.Column="3" Width="96" Content="Close" Click="OnCloseClicked" />
      </Grid>
    </Border>
  </Grid>
</Window>
